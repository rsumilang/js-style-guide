{
  "camelcase"     : true,
  "curly"         : true,
  "eqeqeq"        : true,
  "es3"           : false,
  "forin"         : true,
  "freeze"        : true,
  "funcscope"     : true,
  "globals"       : {
    /* RequireJS */
    "define"      : false
  },
  "indent"        : 2,
  "newcap"        : true,
  "quotmark"      : "single",
  "maxdepth"      : 3,
  "maxstatements" : 15,
  "maxlen"        : 80,
  "undef"         : true,
  "unused"        : true,

  /* Relaxing */
  "eqnull"        : true,
  "strict"        : true,

  /* Environments */
  "mocha"         : true
}