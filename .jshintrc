{
  "curly"         : true,
  "eqeqeq"        : true,
  "es3"           : false,
  "forin"         : true,
  "freeze"        : true,
  "funcscope"     : true,
  "globals"       : {
    /* RequireJS */
    "define"      : false
  },
  "maxdepth"      : 3,
  "maxstatements" : 15,
  "undef"         : true,
  "unused"        : true,

  /* Relaxing */
  "eqnull"        : true,
  "strict"        : true,

  /* Environments */
  "mocha"         : true,
  "node"          : true
}
