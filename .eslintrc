{
  "env": {
    "node"                    : true
  },
  "globals": {
    "define"                  : true
  },
  "rules": {
    "block-scoped-var"        : 2,
    "brace-style"             : [2, "1tbs"],
    "camelcase"               : 2,
    "curly"                   : 2,
    "eol-last"                : 2,
    "eqeqeq"                  : [2, "smart"],
    "indent"                  : [2, 2],
    "func-names"              : 1,
    "guard-for-in"            : 1,
    "key-spacing"             : [1, {
                                    "align"       : "colon",
                                    "beforeColon" : true,
                                    "afterColon"  : true
                                }],
    "max-depth"               : [1, 3],
    "max-statements"          : [1, 15],
    "max-len"                 : [1, 80],
    "new-cap"                 : 1,
    "no-array-constructor"    : 2,
    "no-eval"                 : 2,
    "no-extend-native"        : 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-multi-spaces"         : 0,
    "no-multiple-empty-lines" : 1,
    "no-native-reassign"      : 2,
    "no-nested-ternary"       : 1,
    "no-space-before-semi"    : 2,
    "no-trailing-spaces"      : 2,
    "no-undef"                : 1,
    "no-undefined"            : 2,
    "no-use-before-define"    : [2, "nofunc"],
    "no-unused-expressions"   : 1,
    "no-unused-vars"          : 1,
    "no-with"                 : 2,
    "quotes"                  : [2, "single", "avoid-escape"],
    "radix"                   : 2,
    "wrap-iife"               : [2, "inside"],
    "semi"                    : [2, "always"],
    "space-after-keywords"    : [2, "always"],
    "space-in-brackets"       : [2, "never"],
    "space-unary-ops"         : 2,
    "strict"                  : [2, "function"],
    "yoda"                    : [2, "never"]
  }
}
